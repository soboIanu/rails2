<% @title = "Sandrine - Posts - Admin" %>
<%= link_to "Editer le Post", edit_post_path(@post) %>
<%= link_to "Supprimer le Post",
    post_path(@post),
    method: :delete,
    data: { confirm: "Êtes-vous sûr.e de vouloir supprimer ce Post ?"}
%>

<h1><%= @post.name %></h1>
<p><%= @post.description %></p>
<p><%= @post.content %></p>
