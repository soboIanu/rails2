<h1>Nouveau Post</h1>
<%= form_for(@post) do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :content %>
    <%= f.text_field :content %>
  </p>

  <%= f.submit "Poster" %>

  <% if @post.errors.any? %>
  <div id="error explanation">
    <h2><%= pluralize(@post.errors.count, "error") %>
      prohibited this post from being saved:</h2>

      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
