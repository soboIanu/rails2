<h1>Nouveau Post</h1>
<%= form_for(@post) do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :content %>
    <%= f.text_field :content %>
  </p>

  <%= f.submit "Poster" %>
<% end %>
