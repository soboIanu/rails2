<div class="page-header">
  <h1>Posts</h1>

  <ul class="actions">
    <li><%= link_to fa_icon("plus") + " Nouveau Post", new_post_path,
            class: "btn btn-success" %></li>
  </ul>
</div>

<div id="posts">
  <% @posts.each do |post| %>
    <h2><%= link_to post.name, post %></h2>
    <p><%= post.description %></p>
  <% end %>
</div>
